<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	width="80%"
    
    height="100%"
	binding="{advanceRequestDetailModel>/}">
	<Dialog
		id="transferDialog" title="Transfer">
			<VBox class="sapUiSmallMargin" width="80%" >
				<f:SimpleForm 
						editable="true"
                        layout="ColumnLayout"
                        columnsM="1"
                        columnsL="1"
                        columnsXL="1">
					<f:content>

                  		<Label  text="Transfer At" required="true"  />
						<DatePicker
							id="DatePickerTransferAt"
							class="sapUiSmallMarginBottom"
							value="{
								'path': 'advanceRequestDetailModel>/U_DisbursedAt',
								'type': 'sap.ui.model.type.Date',
								'formatOptions': {
									'pattern': 'y-MM-dd',
									 'UTC' : false
								}
							}"/>

					<Label  text="Transfer From" required="true"  />
					<Select
							forceSelection="false"
							selectedKey="advanceRequestDetailModel>/U_TransferFrom"
							items="{
								path: 'transferAccounts>/value',
								sorter: { path: 'Name' }
							}">
						<core:Item key="{transferAccounts>Code}" text="{transferAccounts>Name}" />
					</Select>

					<Label id="_IDGenLabe20" text="Bank Administration" />
					<Input
								id="inputBankAdm"
								placeholder="Bank Administration amount"
								value="{
									parts: [
										{path:'advanceRequestDetailModel>/U_BankAdm'}, 
										 'IDR',
										 'TwoWay'], 
									type:'sap.ui.model.type.Currency',
									formatOptions: {showMeasure: true}
								}"
					/>


					<Label  text="Transfer Detail" />
					<Text text="{advanceRequestDetailModel>/U_TransferRemarks}" />


					</f:content>
				</f:SimpleForm>

			</VBox>

        <Page>
			
			<footer>
					<Toolbar>
						<ToolbarSpacer />
						<Button type="Accept" text="OK" press="onTransferConfirm" />
						<Button text="Cancel" press="._closeDialog" />
					</Toolbar>
			</footer>

         </Page>
	</Dialog>
</core:FragmentDefinition>