<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onSearch">
		<filterItems>

			<ViewSettingsFilterItem
				text="Advance Status"
				key="U_Status"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="Pending" key="1" />
					<ViewSettingsItem text="Approved by Manager" key="2" />
					<ViewSettingsItem text="Approved by Director" key="3" />
					<ViewSettingsItem text="Transferred" key="5" />
                    <ViewSettingsItem text="Rejected" key="4" />
				</items>
			</ViewSettingsFilterItem>

			<ViewSettingsFilterItem
				text="Realization Status"
				key="U_RealiStatus"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="Unrealized" key="1" />
					<ViewSettingsItem text="Submitted" key="2" />
					<ViewSettingsItem text="Approved by Manager" key="3" />
					<ViewSettingsItem text="Approved by Director" key="4" />
					<ViewSettingsItem text="Realized" key="6" />
                    <ViewSettingsItem text="Rejected" key="5" />

				</items>
			</ViewSettingsFilterItem>

			
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>