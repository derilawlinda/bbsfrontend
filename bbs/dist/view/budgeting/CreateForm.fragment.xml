<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:table="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    
    height="100%">
	<Dialog
		id="mainDialog"
		title="Create Budgeting">
			<VBox class="sapUiSmallMargin" id="formContainer">
				<f:SimpleForm id="SimpleFormChangeColumn_twoGroups234"
						editable="true"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
					<f:content>
                    <core:Title text="Information" />

                        <Label text="Date" />
						<Text text="{createFragmentViewModel>/Date}"  />

                        <Label text="Name" />
						<Input value="{budgetingDetailModel>/Name}" id="name" > </Input>

						<Label id="_IDGenLabel44" text="Company" />

						<ComboBox id="CreateCompany" 
						value="{budgetingDetailModel>/U_Company}"
									items="{companies>/Items}">
									<core:Item id="_IDGenItem441" key="{companies>Value}" text="{companies>Value}" />
						</ComboBox>

						<Label id="_IDGenLabel45" text="Sales Order" />

						<ComboBox id="CreateSalesOrder" 
						value="{budgetingDetailModel>/U_SalesOrder}"
									items="{salesOrder>/Items}">
									<core:Item id="_IDGenItem451" key="{salesOrder>Value}" text="{salesOrder>Value}" />
						</ComboBox>

						<Label id="_IDGenLabe20" text="Amount" />
						<ObjectNumber binding="{budgetingDetailModel>/U_TotalAmount}"  number="{ parts:[{path:'budgetingDetailModel>/U_TotalAmount'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false,decimalSeparator : ',', groupingSeparator : '.'} }" unit="IDR" />


						<core:Title text="Category Information" />

                        <Label text="Project" />

						<ComboBox id="budgetingProjects" 
						value="{budgetingDetailModel>/U_Project}"
									>
									<core:Item text="BLIF 2023" key="BLIF2023" />
									<core:Item text="Finance Dept." key="FICO" />
						</ComboBox>
						

                        <!-- <Label text="Pillar" />
						<Select id="Pillar" >
							<items>
								<core:Item text="Distribution" key="DIS" />
								<core:Item text="Entertainment" key="ENT" />
								<core:Item text="Baliverse" key="BAL" />
							</items>
						</Select> -->

						<Label id="_IDGenLabel441" text="Pillar" />

						<ComboBox id="CreatePillar" 
									items="{oPillarModel>/}"
									value="{budgetingDetailModel>/U_Pillar}">
									<core:Item id="_IDGenItem442" key="{oPillarModel>text}" text="{oPillarModel>text}" />
						</ComboBox>


                       <Label id="_IDGenLabel442" text="Classification" />

						<ComboBox id="CreateClassification" 
									items="{oClassificationModel>/}"
									value="{budgetingDetailModel>/U_Classification}">
									<core:Item id="_IDGenItem443" key="{oClassificationModel>text}" text="{oClassificationModel>text}" />
						</ComboBox>

                       <Label id="_IDGenLabel443" text="Subclass" />

						<ComboBox id="CreateSubClassification" 
									items="{oSubClassModel>/}"
									value="{budgetingDetailModel>/U_SubClass}">
									
									<core:Item id="_IDGenItem444" key="{oSubClassModel>text}" text="{oSubClassModel>text}" />
						</ComboBox>
						
                        <Label id="_IDGenLabel444" text="Subclass2" />

						<ComboBox id="CreateSubClassification2" 
									items="{oSubClass2Model>/}"
									value="{budgetingDetailModel>/U_SubClass2}">
									<core:Item key="{oSubClass2Model>text}" text="{oSubClass2Model>text}" />
						</ComboBox>
						
						
						
						
					</f:content>
				</f:SimpleForm>

                <table:Table id="tableId" 
                        rows="{new_budgeting_accounts>/BUDGETREQLINESCollection}"
						visibleRowCount="7"
						 
				>
				
				<table:extension>
					<OverflowToolbar  class="sapMTBHeader-CTX">
						<Title text="Accounts"/>
						<ToolbarSpacer />
						<Button 
							icon="sap-icon://add"
							press=".onAddPress"
							type="Transparent"
						/>
					</OverflowToolbar>
				</table:extension>
                  
				<table:columns>
					<table:Column >
						<Text text="Account Code" />
						<table:template>
							<ComboBox width="100%"
								showSecondaryValues= "true"
								filterSecondaryValues= "true"
								value="{new_budgeting_accounts>U_AccountCode}"
								items="{
								path: 'accounts>/data',
								templateShareable: false
								}"
							>

								<core:ListItem
									key="{accounts>account_code}"
									text="{accounts>account_code}"
									additionalText="{accounts>account_name}"
								/>

							</ComboBox>
						</table:template>
					</table:Column>

					

					<table:Column >
						<Text text="Amount" />
						<table:template>
							<Input
								id="inputNumber"
								placeholder="Enter number"
								value="{
									parts: [
										{path:'new_budgeting_accounts>U_Amount'}, 
										 'EUR',
										 'TwoWay'], 
									type:'sap.ui.model.type.Currency',
									formatOptions: {showMeasure: true}
								}"
								ariaLabelledBy="InputNumberLabel"
								change="onAmountChange"
								/>
						</table:template>
					</table:Column>

				</table:columns>

				
                </table:Table>
			</VBox>
        <Page>
			
		<footer>
				<Toolbar>
					<ToolbarSpacer />
                    <Button type="Emphasized" text="Create Budget" press="onSaveButtonClick" />
				    <Button text="Cancel" press="._closeDialog" />
				</Toolbar>
		</footer>
         </Page>
	</Dialog>
</core:FragmentDefinition>