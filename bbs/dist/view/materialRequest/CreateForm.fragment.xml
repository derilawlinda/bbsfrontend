<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
    
    height="100%">
	<Dialog
		id="mainDialog"
		title="Create Material Request">
			<VBox class="sapUiSmallMargin" id="formContainer">
				<f:SimpleForm id="SimpleFormChangeColumn_twoGroups234"
						editable="true"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
					<f:content>
                    <core:Title id="_IDGenTitle1" text="Information" />

                        <Label id="_IDGenLabel1" text="Date" />
						<Text text="{createFragmentViewModel>/Date}" />

                        <Label id="_IDGenLabel2" text="Name" />
						<Input id="name" value="{newMR>name}"></Input>

						<Label id="_IDGenLabel4" text="Budget#" />
						<ComboBox width="100%"
								change="onBudgetChange"
								value="{newMR>budget_id}"
								selectionChange="onSelectionChange"
								showSecondaryValues="true"
								items="{
								path: 'budgeting>/value',
								templateShareable: false
								}"
							>

								<core:ListItem
									key="{budgeting>Code}"
									text="{budgeting>Code}"
									additionalText="{budgeting>Name}"
								/>

						</ComboBox>

						<Label id="_IDGenLabel3" text="Company" />
						<Text id="_IDGenText5"  text="{materialRequestHeader>/U_Company}"/>

						<Label id="_IDGenLabe20" text="Remaining Budget" />
						<ObjectNumber binding="{/}" number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false,decimalSeparator : ',', groupingSeparator : '.'} }" unit="IDR" />

						<core:Title id="_IDGenTitle2" text="Category Information" />

                        <Label id="_IDGenLabel5" text="Project" />
						<Text id="_IDGenText15" text="{materialRequestHeader>/U_Project}" />
						

                        <Label id="_IDGenLabel6" text="Pillar" />
						<Text id="_IDGenText16" text="{materialRequestHeader>/U_Pillar}" />

                        <Label id="_IDGenLabel7" text="Class" />
						<Text id="_IDGenText17" text="{materialRequestHeader>/U_Classification}" />

                        <Label id="_IDGenLabel8" text="Subclass" />
						<Text id="_IDGenText18" text="{materialRequestHeader>/U_SubClass}" />
						
                        <Label id="_IDGenLabel9" text="Subclass2" />
						<Text id="_IDGenText19" text="{materialRequestHeader>/U_SubClass2}" />
						
						
						
						
					</f:content>
				</f:SimpleForm>

                 <table:Table id="tableId" 
                        rows="{new_mr_items>/itemRow}"
						visibleRowCount="7"
						 
				>
				
				<table:extension>
					<OverflowToolbar  class="sapMTBHeader-CTX">
						<Title text="Items"/>
						<ToolbarSpacer />
						<Button 
							icon="sap-icon://add"
							press=".onAddPress"
							type="Transparent"
						/>
					</OverflowToolbar>
				</table:extension>
                  
				<table:columns>
					<table:Column >
						<Text text="Account Code" />
						<table:template>
							<ComboBox width="100%"
								selectedKey="{new_mr_items>account_code}"
								items="{
								path: 'accounts>/data',
								templateShareable: false
								}"
							>

								<core:Item
									key="{accounts>account_code}"
									text="{accounts>account_code} - {accounts>account_name}"
								/>

							</ComboBox>
						</table:template>
					</table:Column>

					<table:Column >
						<Text text="Item Name" />
						<table:template>
							<Input
								type="Text"
								placeholder="Enter item"
								value="{new_mr_items>item_name}"
								ariaLabelledBy="InputNumberLabel"/>
						</table:template>
					</table:Column>

					<table:Column >
						<Text text="Amount" />
						<table:template>
							<Input
								id="inputNumber"
								type="Number"
								placeholder="Enter number"
								value="{new_mr_items>amount}"
								ariaLabelledBy="InputNumberLabel"/>
						</table:template>
					</table:Column>

				</table:columns>

				
                </table:Table>
			</VBox>
        <Page id="_IDGenPage1">
			
		<footer>
				<Toolbar id="_IDGenToolbar12">
					<ToolbarSpacer id="_IDGenToolbarSpacer12" />
                    <Button id="_IDGenButton12" type="Emphasized" text="Create Material Request" press="onSaveButtonClick" enabled="false" />
				    <Button id="_IDGenButton13" text="Cancel" press="._closeDialog" />
				</Toolbar>
		</footer>
         </Page>
	</Dialog>
</core:FragmentDefinition>