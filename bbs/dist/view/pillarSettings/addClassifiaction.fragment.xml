<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    
    height="100%">
	<Dialog
		id="mainDialog"
		title="Create {viewConfig>/windowText}">
			<VBox class="sapUiSmallMargin" id="formContainer">
				<f:SimpleForm id="SimpleFormChangeColumn_twoGroups234"
						editable="true"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
					<f:content>
						<Label id="_IDGenLabel44" text="{viewConfig>/windowText}" />

						<ComboBox id="addClassification" 
									items="{companies>/Items}">
									<core:Item id="_IDGenItem441" key="{companies>Value}" text="{companies>Value}" />
						</ComboBox>
						
					</f:content>
				</f:SimpleForm>
                
			</VBox>
        <Page>
			
		<footer>
				<Toolbar>
					<ToolbarSpacer />
                    <Button type="Emphasized" text="Add" press="addClassification" />
				    <Button text="Cancel" press="._closeDialog" />
				</Toolbar>
		</footer>
         </Page>
	</Dialog>
</core:FragmentDefinition>