<mvc:View xmlns:cards="sap.f.cards" 
controllerName="frontend.bbs.controller.userAdministration.User"
xmlns:mvc="sap.ui.core.mvc"
xmlns="sap.m"
xmlns:f="sap.f"
xmlns:table="sap.ui.table" 
>
  <f:DynamicPage  id="userTableID" headerExpanded="true" toggleHeaderOnTitleClick="true" class="sapUiContentPadding">
    
    <f:content>
      <Table 
        id="userTable" 
        inset="false"
        selectionChange="handleSelectionChange"
        items="{
					path: 'userList>/',
					sorter: {
						path: 'Code',
                                                descending : 'true'
					}
				}">
         	<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
                <Title id="title" text="Users"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
                <SearchField
                        id="searchField"
                        width="20%"
                        placeholder="Search here..."
                        search=".onSearch"/>
                <Button id="_IDGenButton2" text=" + Create User" press="onCreateButtonClick" type="Emphasized" visible="{viewModel>/showCreateButton}"/>
            </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="_IDGenColumn1"
                	width="12em">
                        <Text id="_IDGenTextView1" text="ID" />
                </Column>
                <Column id="_IDGenColumn2" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenTextView2" text="Name"  />
                </Column>

                <Column id="_IDGenColumn4" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenTextView4" text="Email"  />
                </Column>

                  <Column id="_IDGenColumn5" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenTextView5" text="Role"  />
                </Column>
                
            </columns>

             <items>
             <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Navigation" press=".onPress" >
                <cells>
                    	<ObjectIdentifier id="_IDGenObjectIdentifier1"
						    text="{userList>id}"/>
                        <Text text="{userList>name}" />
                        <Text text="{userList>email}" />
                        <Text text="{path : 'userList>role_id', formatter:'.roleFormatter'}"  />
                </cells>
             </ColumnListItem>
                
            </items>
      </Table>
      
    </f:content>
  </f:DynamicPage>

  
</mvc:View>