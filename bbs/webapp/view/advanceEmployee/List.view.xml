<mvc:View xmlns:cards="sap.f.cards" 
controllerName="frontend.bbs.controller.advanceEmployee.List"
xmlns:mvc="sap.ui.core.mvc"
xmlns="sap.m"
xmlns:f="sap.f"
xmlns:table="sap.ui.table" 
>
  <f:DynamicPage  id="_IDGenDynamicPage1" headerExpanded="true" toggleHeaderOnTitleClick="true" class="sapUiContentPadding">
    
    <f:content>
      <Table 
        id="_IDGenTable1" 
        inset="false"
        selectionChange="handleSelectionChange"
        items="{
					path: 'advanceEmployee>/data',
					sorter: {
						path: 'ID'
					}
				}">
         	<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
                <Title id="title" text="Employee Advance"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
                <Button id="_IDGenButton2" text=" + Create Employee Advance" press="onCreateButtonClick" type="Emphasized"/>
            </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="_IDGenColumn1"
                	width="12em">
                        <Text id="_IDGenTextView1" text="ID" />
                </Column>
                <Column id="_IDGenColumn2" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenTextView2" text="Request Date"  />
                </Column>

                <Column id="_IDGenColumn4" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenTextView4" text="Disbursed Date"  />
                </Column>

                <Column id="_IDGenColumn3" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenTextView3" text="Name" />
                </Column>
               
                <Column id="_IDGenColumn7" >
                        <Text id="_IDGenTextView8" text="Amount" />
                </Column>
                 <Column id="_IDGenColumn9">
                        <Text id="_IDGenTextView0" text="Status" />
                </Column>
            </columns>

             <items>
             <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Navigation" press=".onPress" >
                <cells>
                    	<ObjectIdentifier id="_IDGenObjectIdentifier1"
						    text="{advanceEmployee>ID}"/>
                        <Text id="_IDGenText1"
						    text="{advanceEmployee>date}" />
                          <Text id="_IDGenText3"
						    text="{advanceEmployee>disbursed_date}" />
                        <Text id="_IDGenText2" text="{advanceEmployee>name}" />
                        <ObjectNumber id="_IDGenObjectNumber1" 
                        	number="{
								parts:[{path:'advanceEmployee>amount'}]
							}"/>
                        <Button id="_IDGenButton1" text="{advanceEmployee>status}" type="{path:'advanceEmployee>status', formatter:'.buttonFormatter'}"/>

                </cells>
             </ColumnListItem>
                
            </items>
      </Table>
      
    </f:content>
  </f:DynamicPage>

  
</mvc:View>