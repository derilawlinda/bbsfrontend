<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    
    height="100%">
	<Dialog
		id="mainDialog"
		title="Create Budgeting">
			<VBox class="sapUiSmallMargin" id="formContainer">
				<f:SimpleForm id="SimpleFormChangeColumn_twoGroups234"
						editable="true"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
					<f:content>
                    <core:Title text="Information" />

                        <Label text="Date" />
						<Text text="18/04/2023" />

                        <Label text="Name" />
						<Input id="name"></Input>

						<Label id="_IDGenLabel44" text="Company" />

						<ComboBox id="CreateCompany" 
									items="{companies>/Items}">
									<core:Item id="_IDGenItem441" key="{companies>Value}" text="{companies>Value}" />
						</ComboBox>

						<Label id="_IDGenLabel45" text="Sales Order" />

						<ComboBox id="CreateSalesOrder" 
									items="{salesOrder>/Items}">
									<core:Item id="_IDGenItem451" key="{salesOrder>Value}" text="{salesOrder>Value}" />
						</ComboBox>

						<core:Title text="Category Information" />

                        <Label text="Project" />
						<Select id="project" >
                            <layoutData>
								<f:ColumnElementData cellsSmall="12" cellsLarge="8" />
							</layoutData>
							<items>
								<core:Item text="BLIF 2023" key="BLIF2023" />
								<core:Item text="Finance Dept." key="FICO" />
							</items>
						</Select>

                        <!-- <Label text="Pillar" />
						<Select id="Pillar" >
							<items>
								<core:Item text="Distribution" key="DIS" />
								<core:Item text="Entertainment" key="ENT" />
								<core:Item text="Baliverse" key="BAL" />
							</items>
						</Select> -->

						<Label id="_IDGenLabel441" text="Pillar" />

						<ComboBox id="CreatePillar" 
									items="{oPillarModel>/}">
									<core:Item id="_IDGenItem442" key="{oPillarModel>text}" text="{oPillarModel>text}" />
						</ComboBox>


                       <Label id="_IDGenLabel442" text="Classification" />

						<ComboBox id="CreateClassification" 
									items="{oClassificationModel>/}">
									<core:Item id="_IDGenItem443" key="{oClassificationModel>text}" text="{oClassificationModel>text}" />
						</ComboBox>

                       <Label id="_IDGenLabel443" text="Subclass" />

						<ComboBox id="CreateSubClassification" 
									items="{oSubClassModel>/}">
									<core:Item id="_IDGenItem444" key="{oSubClassModel>text}" text="{oSubClassModel>text}" />
						</ComboBox>
						
                        <Label id="_IDGenLabel444" text="Subclass2" />

						<ComboBox id="CreateSubClassification2" 
									items="{oSubClass2Model>/}">
									<core:Item key="{oSubClass2Model>text}" text="{oSubClass2Model>text}" />
						</ComboBox>
						
						
						
						
					</f:content>
				</f:SimpleForm>

                <Table id="tableId" 
                         mode="Delete" delete="deleteRow">
                    <headerToolbar>
                    <Toolbar>
                    <ToolbarSpacer></ToolbarSpacer>
                    <Button icon="sap-icon://add" type="Emphasized" text="Add Item" press="onAdd" />
                    </Toolbar>
                    </headerToolbar>
                    <columns>
                    <Column width="50%">
                    <Text text="Amount" />
                    </Column>
                    <Column width="50%">
                    <Text text="Currency" />
                    </Column>

                    <Column width="50%">
                    <Text text="Delete" />
                    </Column>
                    </columns>
                </Table>
			</VBox>
        <Page>
			
		<footer>
				<Toolbar>
					<ToolbarSpacer />
                    <Button type="Emphasized" text="Create Budget" press="onSaveButtonClick" />
				    <Button text="Cancel" press="._closeDialog" />
				</Toolbar>
		</footer>
         </Page>
	</Dialog>
</core:FragmentDefinition>